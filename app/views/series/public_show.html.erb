<!--Content-->
<div class="col-md-12 col-sm-12 col-xs-12 versioncon" style="background: url('/assets/back3.jpg')">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="col-md-1"></div>

        <div class="col-md-2 col-sm-12 col-xs-12">
        	<%= image_tag(@series.cover, class: 'applystyle img-responsive') %>
        </div>

        <div class="col-md-8 col-sm-12 col-xs-12">
            <h1> <%= @series.title %></h1>
            <p>
            	<%= @series.excerpt %>
            </p>
        </div>
        <div class="col-md-1"></div>
    </div>

