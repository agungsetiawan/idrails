<%= @series.title %>

<div>
  Level : <%= @series.level.titleize %>
</div>

<div>
  Excerpt : <%= @series.excerpt %>
</div>

<div>
  Cover : 
  <%= image_tag(@series.cover) if @series.cover? %>
</div>

<div>
  Is Finish? <%= @series.finish? ? 'Yay' : 'Nay' %>
</div>

<% if @series.articles.any? %>
  Articles
  <table border='1'>
	<tr>
	  <td>Title</td>
	  <td>Published</td>
	  <td></td>
	</tr>
	<% @series.articles.each do |a| %>
	  <tr>
	    <td><%= a.title %></td>
	    <td><%= a.published? ? 'Live' : 'On Progress' %></td>
		<td><%= link_to 'Detail', admin_article_path(a) %></td>
	  </tr>
	<% end %>
  </table>
<% else %>
  No Article
<% end %>

<div>
  <%= link_to 'Add Article', new_admin_article_path(series_id: @series.id) %>
</div>

<div>
  <%= link_to 'Back', admin_series_index_path %>
  <%= link_to 'Edit', edit_admin_series_path(@series) %>
  <%= link_to 'Delete', admin_series_path(@series), method: :delete, data: {confirm: 'Really?'} %>
</div>