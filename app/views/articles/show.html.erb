<%= @article.title %>

<div>
  Series : <%= link_to @article.series.title, series_path(@article.series) %>
</div>

<div>
  Content : <%= @article.content %>
</div>

<div>
  Cover : 
  <%= image_tag(@article.cover) if @article.cover? %>
</div>

<div>
  Is Published? <%= @article.published? ? 'Yay' : 'Nay' %>
</div>

<div>
  <%= link_to 'Back', articles_path %>
  <%= link_to 'Edit', edit_article_path(@article) %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Really?'} %>
</div>